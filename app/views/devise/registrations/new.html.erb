<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-devise signup'}) do |f| %>
  <%= devise_error_messages! %>

  <img class="mb-4" src="https://getbootstrap.com/docs/4.1/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal">
    Faça seu cadastro
  </h1>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', required: true, class: 'form-control' %>

  <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Senha', required: true, class: 'form-control pass' %>

  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmação de senha', required: true, class: 'form-control confirm' %>

  <%= f.submit "Cadastrar", class: 'btn btn-lg btn-primary btn-block' %>
  <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>

<% end %>
