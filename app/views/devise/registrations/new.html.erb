<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-devise signup'}) do |f| %>
  <%= devise_error_messages! %>

  <img class="mb-4" src="/logo.png" alt="" width="100" height="100">
  <h1 class="h3 mb-3 font-weight-normal">
    Faça seu cadastro
  </h1>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', required: true, class: 'form-control',  style: 'margin-bottom:2px'  %>

  <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Senha', required: true, class: 'form-control pass',  style: 'margin-bottom:2px'  %>

  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmação de senha', required: true, class: 'form-control confirm',  style: 'margin-bottom:2px'  %>

  <%= f.submit "Cadastrar", class: 'btn btn-lg btn-primary btn-block',  style: 'margin-top:6px'  %>

  <a href="sign_in" class='btn btn-lg btn-block btn-primary' style="background-color: rgb(63,81,181); border: rgb(63,81,181)">Login</a>
  
<% end %>
