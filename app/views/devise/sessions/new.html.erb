<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-devise signup'}) do |f| %>

  <img class="mb-4" src="/logo.png" alt="" width="100" height="100">
  <h1 class="h3 mb-3 font-weight-normal">
    Fa√ßa seu login
  </h1>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: 'Email', class: 'form-control',  style: 'margin-bottom:2px' %>

  <%= f.password_field :password, autocomplete: "current-password", required: true, placeholder: 'Senha', class: 'form-control',  style: 'margin-bottom:2px' %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %>
        Lembre-me
      </label>
    </div>
  <% end -%>

  <%= f.submit "Login", class: 'btn btn-lg btn-block btn-primary' %>

  <a href="sign_up" class='btn btn-lg btn-block btn-primary' style="background-color: rgb(63,81,181); border: rgb(63,81,181)">Cadastre-se</a>
<% end %>
