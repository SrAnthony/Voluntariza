<section class="app-wrapper">

  <div class="app-block">
    <div class="app-block-title">
      <h3>
        <i class="lnr lnr-apartment"></i> Empresas
      </h3>
    </div>

    <div class="app-block-content">

      <table class="table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Telefone</th>
          </tr>
        </thead>

        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= company.name %></td>
              <td><%= company.phone %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>

</section>
